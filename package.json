{
  "name": "contextkit",
  "displayName": "ContextKit",
  "description": "Smart context selection for AI coding assistants",
  "version": "0.1.0",
  "publisher": "milo4jo",
  "repository": {
    "type": "git",
    "url": "https://github.com/milo4jo/contextkit-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "context",
    "claude",
    "copilot",
    "cursor",
    "llm",
    "code search",
    "semantic search",
    "rag"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contextkit.selectContext",
        "title": "Find Context",
        "category": "ContextKit",
        "icon": "$(search)"
      },
      {
        "command": "contextkit.selectContextFromSelection",
        "title": "Find Related Code",
        "category": "ContextKit",
        "icon": "$(references)"
      },
      {
        "command": "contextkit.indexWorkspace",
        "title": "Index Workspace",
        "category": "ContextKit",
        "icon": "$(database)"
      },
      {
        "command": "contextkit.showStatus",
        "title": "Show Status",
        "category": "ContextKit",
        "icon": "$(info)"
      }
    ],
    "keybindings": [
      {
        "command": "contextkit.selectContext",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorTextFocus"
      },
      {
        "command": "contextkit.selectContextFromSelection",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "contextkit.selectContextFromSelection",
          "when": "editorHasSelection",
          "group": "1_contextkit"
        }
      ],
      "commandPalette": [
        {
          "command": "contextkit.selectContext",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "contextkit.selectContextFromSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "ContextKit",
      "properties": {
        "contextkit.defaultBudget": {
          "type": "number",
          "default": 8000,
          "description": "Default token budget for context selection",
          "minimum": 1000,
          "maximum": 100000
        },
        "contextkit.autoIndex": {
          "type": "boolean",
          "default": false,
          "description": "Automatically index workspace on open (can be slow for large projects)"
        },
        "contextkit.cliPath": {
          "type": "string",
          "default": "contextkit",
          "description": "Path to contextkit CLI (if not in PATH)"
        },
        "contextkit.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when context is copied"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
